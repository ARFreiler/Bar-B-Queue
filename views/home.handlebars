<!-- Loop over each object in the projects array -->
{{#each events as |event| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      
      <a href="/events/{{event.id}}">{{event.name}}</a>
    </h2>
    <p>
      <span for="img" aria-label="location"></span>
      <!-- Pass needed_funding value to the helper function -->
      <span class="text">Location: {{event.location}}</span>
      
    </p>
    <p>Created by: {{user.username}}</p>
    <p>Date created: {{format_date event.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{event.description}}
    </p>
  </div>
</div>
{{/each}}